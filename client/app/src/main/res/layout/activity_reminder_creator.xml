<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    android:orientation="vertical"
    tools:context="de.hauke_stieler.rednimer.ReminderCreator.View.ReminderCreatorActivity">

    <!--
    Name selection
    -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Title and description"
        android:textColor="@color/mediumGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defaultBackground"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/creatorTitleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/creatorDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:lines="4" />

    </LinearLayout>

    <!--
    Separator
    -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shadow" />

    <!--
    Description
    -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Due to"
        android:textColor="@color/mediumGray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defaultBackground"
        android:padding="10dp">

        <TextView
            android:id="@+id/creatorChooseDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:text="(choose date)"
            android:textSize="@dimen/text_font_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/creatorChooseTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:text="(choose time)"
            android:textSize="@dimen/text_font_size"
            android:textStyle="bold" />

    </RelativeLayout>

    <!--
    Separator
    -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shadow" />

    <!--
    Notifications
    -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Notifications"
        android:textColor="@color/mediumGray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defaultBackground"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/creatorNotificationSwitch"
            android:layout_toStartOf="@+id/creatorNotificationSwitch"
            android:layout_weight="1"
            android:text="One time"
            android:textSize="@dimen/text_font_size" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/creatorNotificationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:theme="@style/SwitchStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/creatorNotificationSwitch"
            android:layout_toEndOf="@+id/creatorNotificationSwitch"
            android:layout_weight="1"
            android:text="Multiple times"
            android:textSize="@dimen/text_font_size" />

    </RelativeLayout>

    <!--
    Separator
    -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shadow" />

    <!--
    Frequency
    -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Frequency"
        android:textColor="@color/mediumGray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defaultBackground"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/creatorFrequencyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/creatorFrequencyNumberEditText"
            android:layout_alignBottom="@+id/creatorFrequencyNumberEditText"
            android:layout_alignParentStart="true"
            android:layout_marginRight="5dp"
            android:text="Every"
            android:textSize="@dimen/text_font_size" />

        <EditText
            android:id="@+id/creatorFrequencyNumberEditText"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/creatorFrequencyTextView"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:text="1" />

        <Spinner
            android:id="@+id/creatorFrequencyUnitSpinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/creatorFrequencyTextView"
            android:layout_alignBottom="@+id/creatorFrequencyTextView"
            android:layout_toEndOf="@+id/creatorFrequencyNumberEditText" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defaultBackground"
        android:padding="10dp"
        android:visibility="visible">

        <EditText
            android:id="@+id/creatorBeforeNumberEditText"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:text="1" />

        <Spinner
            android:id="@+id/creatorBeforeUnitSpinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/creatorBeforeNumberEditText"
            android:layout_alignBottom="@+id/creatorBeforeNumberEditText"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/creatorBeforeNumberEditText" />

        <TextView
            android:id="@+id/creatorBeforeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/creatorBeforeUnitSpinner"
            android:layout_alignBottom="@+id/creatorBeforeUnitSpinner"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/creatorBeforeUnitSpinner"
            android:text="before due date"
            android:textSize="@dimen/text_font_size" />

    </RelativeLayout>

    <!--
    Separator
    -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shadow" />

</LinearLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SimpleButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="SwitchStyle">
        <item name="colorControlActivated">@color/colorPrimaryMedium</item>
        <item name="colorSwitchThumbNormal">@color/colorPrimaryMedium</item>
        <item name="android:colorForeground">@color/colorPrimaryMedium</item>
    </style>

</resources>
